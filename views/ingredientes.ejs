                          <th scope="col">Opciones</th>
                          <th scope="">Alta/Baja</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% 
                            ingredientes.forEach((ingrediente)=>{
                        %>
                    <tr>
                        <th>
                            <% 
                                if(ingrediente.estado==true){   
