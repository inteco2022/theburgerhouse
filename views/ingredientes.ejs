                            <div class="circuloActivo"></div>
                            <%
                                }else if(ingrediente.estado==false){
                            %>
                            <div class="circuloInactivo"></div>
                            <%
                                }
                            %>
                        </th>
                        <th scope="row"><img src="<%= ingrediente.foto%>" width="50" height="50" alt=""></th>
                        <td><%= ingrediente.nombre%></td>
                        <td><%= ingrediente.cantidad%></td>
                        <td>$ <%= ingrediente.precio%></td> 
                        <td>
                            <a href="editarinrediente/<%= ingrediente.id%>"><button class="button" type="button">Editar</button></a>
                        </td>
                        <td>
                            <a href="/altaingrediente/<%= ingrediente.id%>">A</a>
                            <a href="/bajaingrediente/<%= ingrediente.id%>">B</a>
                        </td>
